{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "removeComments": true,
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "rootDir": "./src",
    "outDir": "./lib",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "jsx": "react",
    "importHelpers": true,
    "noImplicitAny": false,
    "types": ["node", "jest",  "@testing-library/jest-dom"],
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "bundles",
    "example",
    "lib",
    "esm",
    "build",
    "scripts",
    "*.stories*",
    "*.stories.tsx",
    "__tests__"

  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "rules": {
    "indent": [true, 2]
  }
}
